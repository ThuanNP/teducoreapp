<!-- Modal -->
<div class="modal fade" id="modal-add-edit" tabindex="-1" role="dialog" aria-labelledby="modal-add-edit-title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <header class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Product category update</h4>
            </header>
            <section class="modal-body">
                <form class="form-horizontal" role="form" id="form-maintainance-modal">
                    <div class="form-group">
                        <input type="hidden" id="hidden-id-modal" value="0" />
                        <label for="txt-name-modal" class="col-sm-2 control-label no-padding-right">Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-name-modal" class="form-control" id="txt-name-modal" placeholder="Name of category">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Parent</label>
                        <div class="col-sm-10">
                            <input id="ddl-category-id-modal" class="form-control" name="ddl-category-id-modal" value="" style="width: 100%;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtAliasM" class="col-sm-2 control-label no-padding-right">Alias</label>
                        <div class="col-sm-10">
                            <input type="text" name="txtAliasM" class="form-control" id="txtAliasM">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-description-modal" class="col-sm-2 control-label no-padding-right">Description</label>
                        <div class="col-sm-10">
                            <textarea rows="3" name="txt-description-modal" class="form-control" id="txt-description-modal"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtOrderM" class="col-sm-2 control-label no-padding-right">Sort Order</label>
                        <div class="col-sm-10">
                            <input name="txtOrderM" class="form-control" id="txtOrderM" style="width: 100%;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtHomeOrderM" class="col-sm-2 control-label no-padding-right">Home Order</label>
                        <div class="col-sm-10">
                            <input name="txtHomeOrderM" class="form-control" id="txtHomeOrderM" style="width: 100%;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-image-modal" class="col-sm-2 control-label no-padding-right">Images</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" name="txt-image-modal" class="form-control" id="txt-image-modal" />
                                <input type="file" id="txt-input-image-file" style="display:none" />
                                <span class="input-group-btn">
                                    <input type="button" id="btn-select-imgage" class="btn btn-default" value="Browser" />
                                </span>
                            </div><!-- /input-group -->

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="txt-seo-page-title-modal" class="col-sm-2 control-label no-padding-right">SEO Title</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-seo-page-title-modal" class="form-control" id="txt-seo-page-title-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-seo-alias-modal" class="col-sm-2 control-label no-padding-right">URL SEO</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-seo-alias-modal" class="form-control" id="txt-seo-alias-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtSeoKeywordM" class="col-sm-2 control-label no-padding-right">SEO Keyword</label>
                        <div class="col-sm-10">
                            <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtSeoDescriptionM" class="col-sm-2 control-label no-padding-right">SEO Description</label>
                        <div class="col-sm-10">
                            <textarea rows="3" name="txtSeoDescriptionM" class="form-control" id="txtSeoDescriptionM"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" checked="checked" id="ck-status-modal">
                                    <span class="text">Active.</span>
                                </label>
                                <label>
                                    <input type="checkbox" id="ck-show-homepage-modal">
                                    <span class="text">Show on home.</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="btn-save" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>