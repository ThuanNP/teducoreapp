
@{
    ViewData["Title"] = "Bill management";
}

@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/admin-app/controllers/bill/index.js" asp-append-version="true"></script>
    <script>
        var billObj = new billController();
        billObj.initialize();
    </script>
}

<input type="hidden" id="hid-category-id" value="0" />
<!-- page title -->
<div class="page-title">
    <div class="title_left">
        <h3>Bill management</h3>
    </div>
    <div class="title_right">
        <section role="search">
            <div class="input-group col-lg-3 col-md-3 col-sm-12 pull-left">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <input type="text" id="txt-from-date" class="form-control" placeholder="From date">
            </div>
            <div class="input-group col-lg-3 col-md-3 col-sm-12 pull-left">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <input type="text" id="txt-to-date" class="form-control" placeholder="To date">
            </div>
            <div class="input-group col-lg-4 col-md-4 col-sm-12 pull-left">
                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                <input type="text" id="txt-search-keyword" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btn-search" type="button">Go!</button>
                </span>
            </div>
            <div class="btn-group col-lg-2 col-md-2 col-sm-12 pull-left" role="group" aria-label="index button">
                <button class="btn btn-success" id="btn-create" type="button">Create</button>
            </div>
        </section>
    </div>
</div>
<!-- /page title -->
<div class="clearfix"></div>
<!-- page content -->
<main class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content table-responsive">
                <table id="tbl-orders" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Customer name</th>
                            <th>Payment method</th>
                            <th>Order date</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
            </div>
            <partial name="../Shared/_Pagination.cshtml" />
        </div>
    </div>
</main>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Id}}</td>
        <td>{{CustomerName}}</td>
        <td>{{{PaymentMethod}}}</td>
        <td>{{{OrderDate}}}</td>
        <td>{{{BillStatus}}}</td>
        <td class="text-center"><a href="#" data-id="{{Id}}" class="btn-view"><i class="fa fa-eye"></i></a></td>
    </tr>
</script>
<!-- page modals -->
<partial name="_DetailModal.cshtml" />
<!-- /page modals -->