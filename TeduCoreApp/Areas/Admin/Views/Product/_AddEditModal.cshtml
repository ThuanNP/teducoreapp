<!-- Modal -->
<div class="modal fade" id="modal-add-edit" tabindex="-1" role="dialog" aria-labelledby="modal-add-edit-title" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <header class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Product update</h4>
            </header>
            <section class="modal-body">
                <form class="form-horizontal" role="form" id="form-maintainance-modal">
                    <div class="form-group">
                        <input type="hidden" id="hidden-id-modal" value="0" />
                        <label for="txt-name-modal" class="col-sm-2 control-label no-padding-right">Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-name-modal" class="form-control" id="txt-name-modal">
                        </div>
                    </div>
                    <div class="form-group" style="width:100%;">
                        <label class="col-sm-2 control-label no-padding-right">Category</label>
                        <div class="col-sm-10" style="width:83.33333333333%;">
                            <input id="ddl-category-id-modal" required class="form-control" name="ddl-category-id-modal" value="" style="width: 100%;min-width:350px;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-description-modal" class="col-sm-2 control-label no-padding-right">Description</label>
                        <div class="col-sm-10">
                            <textarea rows="4" name="txt-description-modal" class="form-control" id="txt-description-modal"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-unit-modal" class="col-sm-2 control-label no-padding-right">Unit</label>
                        <div class="col-sm-3">
                            <input type="text" name="txt-unit-modal" class="form-control" id="txt-unit-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label ">Sell price</label>
                        <div class="col-sm-2">
                            <input name="txt-price-modal" class="form-control" id="txt-price-modal" >
                        </div>                      
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Original price</label>
                        <div class="col-sm-1">
                            <input name="txt-original-price-modal" class="form-control" id="txt-original-price-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Promotion</label>
                        <div class="col-sm-1">
                            <input name="txt-promotion-price-modal" class="form-control" id="txt-promotion-price-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-image-modal" class="col-sm-2 control-label no-padding-right">Image</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" name="txt-image-modal" class="form-control" id="txt-image-modal" />
                                <input type="file" id="txt-input-image-file" style="display:none" />
                                <span class="input-group-btn">
                                    <input type="button" id="btn-select-image" class="btn btn-default" value="Browser" />
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtContentModal" class="col-sm-2 control-label no-padding-right">Content</label>
                        <div class="col-sm-10">
                            <textarea id="txtContentModal" rows="6" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-meta-keyword-modal" class="col-sm-2 control-label no-padding-right">SEO title</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-seo-page-title-modal" class="form-control" id="txt-seo-page-title-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-seo-alias-modal" class="col-sm-2 control-label no-padding-right">SEO Url</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-seo-alias-modal" class="form-control" id="txt-seo-alias-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-meta-keyword-modal" class="col-sm-2 control-label no-padding-right">SEO Keywords</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-meta-keyword-modal" class="form-control" id="txt-meta-keyword-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-meta-description-modal" class="col-sm-2 control-label no-padding-right">SEO Description</label>
                        <div class="col-sm-10">
                            <textarea rows="3" name="txt-meta-description-modal" class="form-control" id="txt-meta-description-modal"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-tag-modal" class="col-sm-2 control-label no-padding-right">Tag (separated by comma)</label>
                        <div class="col-sm-10">
                            <input type="text" name="txt-tag-modal" class="form-control" id="txt-tag-modal">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" checked="checked" id="ck-status-modal">
                                    <span class="text">Active.</span>
                                </label>
                                <label>
                                    <input type="checkbox" id="ck-hot-modal">
                                    <span class="text">Hot product</span>
                                </label>
                                <label>
                                    <input type="checkbox" checked="checked" id="ck-show-homepage-modal">
                                    <span class="text">Show on home</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="btn-save" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>