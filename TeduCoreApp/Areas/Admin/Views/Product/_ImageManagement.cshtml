<div id="modal-image-management" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Product images management</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="form-image-management-modal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">Images selected</label>
                            <div class="col-sm-10">
                                <div id="image-list" class="col-md-12">

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Select image</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <input type="file" id="file-image" name="pic" accept="image/*" />
                                </div><!-- /input-group -->
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <footer class="modal-footer">
                <button type="button" id="btn-save-image" class="btn group btn-primary">Save</button>
                <button type="button" data-dismiss="modal" class="btn group btn-secondary">Cancel</button>
            </footer>
        </div>
    </div>
</div>