<div id="modal-add-edit" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <header class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add/edit role</h4>
            </header>
            <section class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="form-maintainance-modal">
                        <div class="form-group">
                            <input type="hidden" id="hidden-id-modal" value="" />
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Role name</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txt-name-modal">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtDescription" class="col-sm-2 control-label no-padding-right">Description</label>
                            <div class="col-sm-10">
                                <textarea rows="4" name="txtDescription" class="form-control" id="txt-description-modal"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="btn-save" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>