
@{
    ViewData["Title"] = "Shopping cart";
}

@section Scripts{
    <script src="~/client-app/controllers/cart/index.js"></script>
    <script>
        var cartObj = new CartController();
        cartObj.initialize();
    </script>
}
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="col-main">
            <div class="cart">
                <div class="page-content page-order">
                    <div class="page-title">
                        <h2>Shopping Cart</h2>
                    </div>
                    <div class="order-detail-content">
                        <div class="table-responsive">
                            <table class="table table-bordered cart_summary">
                                <thead>
                                    <tr>
                                        <th class="cart_product">Product</th>
                                        <th>Description</th>
                                        @*<th>Avail.</th>*@
                                        <th class="text-center">Unit price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total</th>
                                        <th class="action"><i class="fa fa-trash-o"></i></th>
                                    </tr>
                                </thead>
                                <tbody id="table-cart-content" />
                                <tfoot>
                                    <tr>
                                        <td colspan="2" rowspan="2"></td>
                                        <td colspan="3" class="text-right"><strong>Total</strong></td>
                                        <td colspan="2" class="text-right"><strong><span id="lbl-total-amount"></span> </strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                            <script id="template-cart" type="x-tmpl-mustache">
                                <tr data-id="{{ProductId}}">
                                    <td class="cart_product">
                                        <a href="{{Url}}">
                                            <img src="{{Image}}" alt="{{ProductName}}">
                                        </a>
                                    </td>
                                    <td class="cart_description">
                                        <p class="product-name"><a href="{{Url}}">{{ProductName}} </a></p>
                                        <small><a href="#">Color : {{{Colors}}}</a></small>
                                        <small><a href="#">Size : {{{Sizes}}}</a></small>
                                    </td>
                                    @*<td class="availability in-stock"><span class="label">In stock</span></td>*@
                                    <td class="price"><span>{{Price}}</span></td>
                                    <td class="qty">{{{Quantity}}}></td>
                                    <td class="price"><span>{{Amount}}</span></td>
                                    <td class="action">
                                        <a href="#" data-id="{{ProductId}}" class="btn-delete"><i class="icon-close"></i></a>
                                    </td>
                                </tr>
                            </script>
                        </div>
                        <div class="cart_navigation">
                            <a class="continue-btn" asp-controller="Product" asp-action="Index"><i class="fa fa-arrow-left"> </i>&nbsp; Continue shopping</a>
                            <a id="btn-clear-all" class="continue-btn" href="#"><i class="fa fa-remove"> </i>&nbsp; Clear cart</a>
                            <a class="checkout-btn" asp-controller="Cart" asp-action="Checkout"><i class="fa fa-check"></i> Proceed to checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<partial name="~/Views/Shared/_ServicePartial.cshtml" />

